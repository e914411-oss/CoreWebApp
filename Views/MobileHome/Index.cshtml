@{
    ViewData["Title"] = "行動版-首頁";
    Layout = "_LayoutMobile";
}

<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h5 class="m-0">PMDS-ECRS（行動版）</h5>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-secondary btn-sm">登出</button>
        </form>
    </div>

    <div class="row g-3">
        <div class="col-12">
            <a class="btn btn-primary w-100 py-3" asp-controller="Inspection" asp-action="InspectionQry">
                稽查查詢
            </a>
        </div>
        <div class="col-12">
            <a class="btn btn-success w-100 py-3" asp-controller="Inspection" asp-action="FormQuery">
                表單查詢
            </a>
        </div>
        <div class="col-12">
            <a class="btn btn-dark w-100 py-3" asp-controller="Inspection" asp-action="PReview">
                Preview
            </a>
        </div>
    </div>
</div>